    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_recycle_item_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_recycle_item_margin"
            android:layout_marginStart="@dimen/dimen_recycle_item_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_task_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginEnd="5dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_task_name_small_size" />

            <TextView
                android:id="@+id/tv_task_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_task_time_small_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_recycle_item_margin"
            android:layout_marginStart="@dimen/dimen_recycle_item_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_context"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_task_context_small_size" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="@dimen/dimen_icon_image_size"
                android:layout_height="@dimen/dimen_icon_image_size"
                android:src="@drawable/delete" />
        </LinearLayout>

    </LinearLayout>

<!--</android.support.v7.widget.CardView>-->
